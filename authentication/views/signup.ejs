<!DOCTYPE HTML>
<html>
  <head>
    <%- include('./bootstraps/link-bootstrap') -%>
    <%- include('./bootstraps/script-bootstrap') -%>
    <%- include('./bootstraps/passwordVis') -%>
  </head>
  <div class="container"> 
    <% if(result) { %>
      <div class="alert alert-info" role="alert">
        <%= result %>
      </div>
    <% } %>

    <h1 class="mb-3">Sign up</h1>
    <form method="POST" action="/signup">
      <div class="mb-3">
        <label for="uname" class="form-label">Username (optional)</label>
        <input type="text" class="form-control" id="uname" name="username" aria-describedby="form-text" value="<%= userData.username %>">
        <div class="form-text">Your email will be used as username, if not provided!</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" value="<%= userData.email %>">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <div class="input-group">
          <input type="password" class="form-control" id="password" name="password" value="<%= userData.password %>">
          <button type="button" class="btn btn-outline-secondary" id="togglePassword">Show</button>
        </div>
        <div id="passwordHelpBlock" class="form-text">
            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
        </div>
      </div>
      <div class="mb-3 form-check">
        <label class="form-check-label" for="rembox">Remember me</label>
        <input type="checkbox" class="form-check-input" name="rememberme" id="rembox">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</html>
